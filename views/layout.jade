doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body

  unless user
    ul
      li: a(href="/") Home
      li: a(href="/login") Log In
  else
    ul
      li: a(href="/") Home
      li: a(href="/account") Account
      li: a(href="/logout") Log Out

  block content
